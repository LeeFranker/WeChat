<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <com.tw.wechat.widget.ActionBarView
        android:id="@+id/actionBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </com.tw.wechat.widget.ActionBarView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <com.tw.wechat.widget.PromptsView
            android:id="@+id/promptsview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </com.tw.wechat.widget.PromptsView>

        <com.tw.wechat.widget.pull.PullToRefreshListView
            android:id="@+id/listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="@color/ransparent"
            android:fadingEdgeLength="0dp"
            android:divider="@color/ransparent"
            android:footerDividersEnabled="false"
            android:scrollbarFadeDuration="0"
            android:scrollbars="none" />
    </LinearLayout>

</LinearLayout>